
{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "baseUrl": "./src", 
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true, //Needed for decorator-based libraries
    "experimentalDecorators": true, //Required for decorator syntax
    "strictPropertyInitialization": false, //Disables the requirement for property initialization
    //     "paths": {
    //   "@/*": ["src/*"],
    //   "@types/*": ["types/*"]                        
    // },
    // "incremental": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}

